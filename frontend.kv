# All imports
#:import NoTransition kivy.uix.screenmanager.NoTransition
#:import SlideTransition kivy.uix.screenmanager.SlideTransition



# GetStarted class
<GetStarted>:
    name: "GetStarted"
    FloatLayout:
        Image:
            source: 'resources/get_started_back.png'
            size_hint: (1,1)
            pos_hint: {"x": 0, "top": 1}

        Image:
            source: 'resources/only_pic.jpg'
            size_hint: (0.95,0.525)
            pos_hint: {"x": 0.025, "top": 0.8}
        
        Button:
            text: "GET STARTED"
            font_size: 20
            color: (1,1,1,1)
            background_color: (51/255, 153/255, 255/255, 1)
            size_hint: (0.5,0.05)
            pos_hint: {"x":0.25, "top": 0.2}
            on_release:
                root.go_to_MainPanel()


# MainPanel class
<MainPanel>:
    name: "MainPanel"
    FloatLayout:
        Image:
            source: 'resources/header.png'
            size_hint: (0.98,0.8)
            pos_hint: {"x": 0.01, "top": 1.35}

        Image:
            source: 'resources/footer.png'
            size_hint: (0.98,0.8)
            pos_hint: {"x": 0.01, "top": .465}

        Label:
            text: "MAIN PANEL FUNCTIONS"
            font_size: 22
            color: (0,0,0,1)
            pos_hint: {"top": 1.28}

        GridLayout:
            cols: 1
            size_hint: (0.8, 0.5)
            pos_hint: {"x": 0.1, "top": 0.72}
            Button:
                text: "Add Email"
                on_release:
                    root.go_to_AddPanel()
            Button:
                text: "Update Email"
                on_release:
                    root.go_to_UpdatePanel()
            Button:
                text: "Delete Email"
                on_release:
                    root.go_to_DeletePanel()
            Button:
                text: "Search Email"
                on_release:
                    root.go_to_SearchPanel()
            Button:
                text: "Send Email"
                on_release:
                    root.go_to_SendPanel()
            
        Button:
            background_normal: 'resources/profile.png'
            background_down: 'resources/profile_down.png'
            size_hint: (0.18,0.1)
            pos_hint: {"x": 0.82, "top": 1.006}
            on_release:
                root.go_to_website()

# AddPanel class
<AddPanel>:
    name: "AddPanel"

    FloatLayout:
        Image:
            source: 'resources/header.png'
            size_hint: (0.98,0.8)
            pos_hint: {"x": 0.01, "top": 1.35}

        Image:
            source: 'resources/footer.png'
            size_hint: (0.98,0.8)
            pos_hint: {"x": 0.01, "top": .465}

        Button:
            background_normal: 'resources/profile.png'
            background_down: 'resources/profile_down.png'
            size_hint: (0.18,0.1)
            pos_hint: {"x": 0.82, "top": 1.006}
            on_release:
                root.go_to_website()

        Label:
            text: "FILL UP THE FORM"
            font_size: 25
            color: (0, 0, 0,1)
            pos_hint: {"top": 1.3}

        Button:
            background_normal: 'resources/cross.png'
            background_down: 'resources/cross_down.png'
            size_hint: (0.4/2,0.25/2)
            pos_hint: {"x": 0.4, "top": 0.8}
            on_release:
                root.go_back()


# Add Panel Success PopUp
<AddPanelSuccessPop>:
    Label:
        text: "CONGRATS, EVERYTHING WENT SMOOTHLY :)"
        font_size: 12
        size_hint: 0.6, 0.2
        pos_hint: {"x": 0.2, "top":0.9}
    Label:
        text: "ADD MORE MAIL OR GO TO MAIN PANEL!"
        font_size: 12
        size_hint: 0.6, 0.2
        pos_hint: {"x": 0.2, "top":0.7}


# Add Panel Fail PopUp
<AddPanelFailPop>:
    Label:
        text: "SORRY, SOMETHING WENT WRONG :("
        font_size: 12
        size_hint: 0.6, 0.2
        pos_hint: {"x": 0.2, "top":0.9}
    Label:
        text: "PLEASE READ THE DOCS AND TRY AGAIN!"
        font_size: 12
        size_hint: 0.6, 0.2
        pos_hint: {"x": 0.2, "top":0.7}



